---
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="keywords"
      content="Portfolio, Jesus Enríquez Jaime, Ingeniero de Software, Desarrollo de software"
    />
    <meta
      name="description"
      content="Portafolio profesional de Jesus Enríquez Jaime. Contiene experiencias, habilidades, proyectos y contactos."
    />
    <meta name="author" content="Jesus Enríquez Jaime" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
    text-align: justify;
  }

  @media print {
    .no-print {
      display: none !important;
    }
  }

  .print {
    display: none !important;
  }

  @media print {
    .print {
      display: block !important;
    }
  }

  #about-project .main {
    margin-top: 10px;
    margin-bottom: 10px;
  }

  #about-project button {
    border-radius: 10px;
    color: #777;
    background-color: #fff;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 64px;
  }

  #about-project button:hover {
    background: #eee;
    border: 1px solid #ddd;
    color: #666;
  }

  #about-project ul {
    list-style: disc;
    padding: revert;
    margin: 5px;
    color: #777;
    font-size: 0.9rem;
    line-height: 1.5;
  }
</style>
